<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Màn hình đọc danh bạ"
        android:id="@+id/btnShowContacts"
        android:onClick="XulymanhinhDanhBa"
        android:layout_centerInParent="true"
        />
    <Button
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Màn hình đọc tin nhắn"
        android:id="@+id/btnShowMessage"
        android:layout_below="@id/btnShowContacts"
        android:onClick="XulymanhinhTinNhan"/>

</RelativeLayout>